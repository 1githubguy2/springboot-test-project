<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yjl.mapper.TenantUserMapper">
    <resultMap id="TenantUserMap" type="com.yjl.domain.model.TenantUser">
        <id property="id" column="id"/>
        <id property="createTime" column="create_time"/>
        <id property="updateTime" column="update_time"/>
        <id property="createUser" column="create_user"/>
        <id property="updateUser" column="update_user"/>
        <id property="name" column="name"/>
        <id property="code" column="code"/>
    </resultMap>
    <select id="pageList" parameterType="com.yjl.domain.model.TenantUser" resultMap="TenantUserMap">
        select * from sys_tenant_user where deleted = 0
        <if test="params.code != null and params.code != ''">
            and code = #{params.code}
        </if>
        <if test="params.name != null and params.name != ''">
            and name like concat('%', #{params.name}, '%')
        </if>
    </select>

    <update id="updateByCondition">
        udpate sys_tenant_user
        <set>
            <if test="entity.code != null and entity.code != ''">
                code = #{entity.code},
            </if>
            <if test="entity.name != null and entity.name != ''">
                name = #{entity.name},
            </if>
        </set>
        where id = #{entity.id}
    </update>
</mapper>
        